{
    "name": "miracron",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3",
    "containerEnv": {
        "TZ": "Asia/Tokyo"
    },
    "postCreateCommand": "pip3 install --requirement .devcontainer/requirements.txt",
    // https://containers.dev/supporting
    "customizations": {
        "vscode": {
            "settings": {},
            "extensions": [
                "ms-python.python",
                "bungcip.better-toml",
                "EditorConfig.EditorConfig"
            ]
        }
    }
}
